<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_scan2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="START" />

        <Button
            android:layout_gravity="right"
            android:id="@+id/bt_test"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="FN" />

        <TextView
            android:id="@+id/tv_items2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items:0"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEC211" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEC211" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6FA"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_connectDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_connectMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mac:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_connectBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_connectSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signature:"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEC211" />

    <ListView
        android:id="@+id/lv_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
